<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:fadingEdge="none"
        android:overScrollMode="never"
        >

        <LinearLayout
            android:id="@+id/inner"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/bg"
                android:background="#666"
                android:layout_width="match_parent"
                android:layout_height="250dp">

                <ImageView
                    android:id="@+id/bookimg"
                    android:src="@drawable/unload120_150"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="80dp"
                    android:scaleType="fitXY"
                    android:layout_width="80dp"
                    android:layout_height="100dp" />

                <RelativeLayout
                    android:id="@+id/rl6"
                    android:layout_below="@+id/bookimg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/bookname2"
                        android:text="锻体巅峰"
                        android:layout_centerHorizontal="true"
                        android:ellipsize="middle"
                        android:layout_marginTop="15dp"
                        android:textSize="18sp"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        tools:ignore="HardcodedText" />

                    <LinearLayout
                        android:id="@+id/ll2"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_below="@+id/bookname2"
                        android:layout_marginTop="2dp"
                        android:layout_centerHorizontal="true"
                        android:layout_height="30dp">

                        <TextView
                            android:id="@+id/authorname2"
                            android:text="旺旺小小苏2"
                            android:gravity="right"
                            android:textSize="16sp"
                            android:ellipsize="start"
                            android:textColor="#ddffffff"
                            android:lines="1"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            tools:ignore="EllipsizeMaxLines,HardcodedText,RtlHardcoded" />

                        <TextView
                            android:text="."
                            android:textColor="#ddffffff"
                            android:textStyle="bold"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/class1"
                            android:text="仙侠"
                            android:gravity="center"
                            android:textSize="16sp"
                            android:ellipsize="middle"
                            android:lines="1"
                            android:textColor="#ddffffff"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:ignore="EllipsizeMaxLines,HardcodedText,RtlHardcoded" />

                        <TextView
                            android:text="."
                            android:textColor="#ddffffff"
                            android:textStyle="bold"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/class2"
                            android:text="古典仙侠"
                            android:gravity="left"
                            android:ellipsize="end"
                            android:lines="1"
                            android:textSize="16sp"
                            android:textColor="#ddffffff"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:ignore="HardcodedText,RtlHardcoded" />

                    </LinearLayout>

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/parent"
                android:focusableInTouchMode="false"
                android:focusable="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </ScrollView>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        app:contentInsetStart="0dp"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <RelativeLayout
                android:id="@+id/barbg"
                android:alpha="0"
                android:background="#333"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/bookname"
                    android:text="锻体巅峰"
                    android:textSize="15sp"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:ellipsize="marquee"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    tools:ignore="HardcodedText" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="230dp"
                    android:layout_below="@+id/bookname"
                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/authorname"
                        android:text="旺旺小小苏2"
                        android:gravity="right"
                        android:textSize="14sp"
                        android:ellipsize="start"
                        android:textColor="#ddffffff"
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        tools:ignore="HardcodedText,RtlHardcoded" />

                    <TextView
                        android:text="."
                        android:textColor="#ddffffff"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/class0"
                        android:text="仙侠"
                        android:gravity="left"
                        android:ellipsize="end"
                        android:textSize="14sp"
                        android:textColor="#ddffffff"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        tools:ignore="HardcodedText,RtlHardcoded" />

                </LinearLayout>

            </RelativeLayout>

            <ImageView
                android:id="@+id/returnbutton"
                android:src="@drawable/left_arrow"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="10dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                tools:ignore="RtlHardcoded" />

            <ImageView
                android:id="@+id/menubutton"
                android:src="@drawable/menu"
                android:layout_marginTop="35dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                tools:ignore="RtlHardcoded" />

        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

</merge>